<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hr_image"
            android:id="@+id/hr_imageview"/>
        <TextView
            android:id="@+id/heart_rate"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="受信中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/moving_image"
            android:id="@+id/mv_imageview"/>
        <TextView
            android:id="@+id/moving"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="受信中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temperature_image"
            android:id="@+id/temp_imageview"/>
        <TextView
            android:id="@+id/temperature"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="受信中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


</LinearLayout>